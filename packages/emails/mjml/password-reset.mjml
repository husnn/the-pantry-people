<mjml>
  <mj-head>
    <mj-include path="./snippets/globals.mjml" />
  </mj-head>
  <mj-body>
    <mj-include path="./snippets/top.mjml" />
    <mj-section mj-class="body">
      <mj-column>
        <mj-text mj-class="text-body">
          You made a request to reset your password.
        </mj-text>
        <mj-text mj-class="text-body">
